
using GameFramework.Event;

namespace <%-namespace%>
{
    public sealed class CommonEventArgs<T> : GameEventArgs
    {
        public static readonly int EventId = typeof(CommonEventArgs<T>).GetHashCode();

        public CommonEventArgs(int errno, string errmsg, T data)
        {
            this.errno = errno;
            this.errmsg = errmsg;
            this.data = data;
        }
        
        public override int Id
        {
            get
            {
                return EventId;
            }
        }
        
        public override void Clear()
        {
            errno = default(int);
            errmsg = default(string);
            data = default(T);
        }

        /// <summary>
        /// 错误码
        /// </summary>
        public int errno { get; set; }

        /// <summary>
        /// 错误消息
        /// </summary>
        public string errmsg { get; set; }

        /// <summary>
        /// 携带的消息实体
        /// </summary>
        public T data { get; set; }
    }
}